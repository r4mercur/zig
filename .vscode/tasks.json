{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "zig build -Doptimize=Debug",
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}